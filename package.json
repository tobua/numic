{
  "name": "numic",
  "description": "Utility to manage React Native projects.",
  "version": "0.0.0-development",
  "repository": "github:tobua/numic",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "postinstall": "bun installation.ts",
    "templates": "folders './template/*' 'update --no-install' --output",
    "test": "bun test test/cache test/configuration test/native test/patch test/plugin",
    "types": "tsc && tsc --project ./test/tsconfig.json"
  },
  "dependencies": {
    "@react-native-community/cli": "^20.0.2",
    "@react-native-community/cli-platform-android": "^20.0.2",
    "@react-native-community/cli-platform-ios": "^20.0.2",
    "@react-native/babel-preset": "^0.82.0",
    "@react-native/eslint-config": "^0.82.0",
    "@react-native/metro-config": "^0.82.0",
    "@react-native/typescript-config": "^0.82.0",
    "arg": "^5.0.2",
    "command-exists": "^1.2.9",
    "deepmerge": "^4.3.1",
    "eslint": "8.57.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-glob": "^3.3.3",
    "global-cache-dir": "^6.0.1",
    "is-ci": "^4.1.0",
    "json5": "^2.2.3",
    "logua": "^3.0.3",
    "pakag": "^3.1.4",
    "parse-gitignore": "^2.0.0",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "semver": "^7.7.3",
    "semver-sort": "^1.0.0",
    "sharp": "^0.34.4",
    "svg2vectordrawable": "^2.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/bun": "^1.3.0",
    "@types/command-exists": "^1.2.3",
    "@types/get-pixels": "^3.3.4",
    "@types/parse-gitignore": "^1.0.2",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.1",
    "@types/semver-sort": "^0.0.5",
    "get-pixels": "^3.3.3",
    "jest-fixture": "^4.1.0",
    "react-native": "^0.82.0",
    "typescript": "^5.9.3",
    "zero-configuration": "^1.0.8"
  },
  "peerDependencies": {
    "react-native": ">= 0.73"
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": true,
  "exports": {
    ".": "./index.ts",
    "./types": "./image.d.ts"
  },
  "bin": "./index.ts",
  "files": [
    "*.ts",
    "configuration/*",
    "plugin/*",
    "script/*",
    "*.d.ts"
  ],
  "keywords": [
    "react-native",
    "patch",
    "utility",
    "ios",
    "android"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": [
      "extends:bundle",
      "test/fixture"
    ],
    "vscode": "biome",
    "biome": [
      {
        "extends": "recommended",
        "linter": {
          "rules": {
            "correctness": {
              "noNodejsModules": "off"
            },
            "suspicious": {
              "noExplicitAny": "off"
            },
            "performance": {
              "useTopLevelRegex": "off"
            },
            "style": {
              "noDefaultExport": "off"
            }
          }
        },
        "files": {
          "includes": [
            "**/*",
            "!template",
            "!test",
            "!website",
            "!**/*.d.ts"
          ]
        }
      },
      {
        "folder": "test",
        "extends": "test",
        "root": false
      },
      {
        "folder": "plugin/android-sdk/test",
        "extends": "test",
        "root": false
      },
      {
        "folder": "plugin/icon/test",
        "extends": "test",
        "root": false
      }
    ],
    "typescript": [
      {
        "extends": "plugin",
        "files": [
          "index.ts",
          "installation.ts"
        ]
      },
      {
        "extends": "plugin",
        "folder": "test",
        "compilerOptions": {
          "strict": false
        }
      }
    ]
  }
}
