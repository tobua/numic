{
  "name": "<%= name %>",
  "scripts": {
    "test": "jest",
    "types": "tsc"
  },
  "numic": {
    "icon": {
      "androidForeground": "adaptive-icon.svg",
      "androidBackgroundColor": "#e9e9e9"
    },
    "android-sdk": {
      "ndkVersion": true
    },
    "xcode": {
      "displayName": "<%= name %>",
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "epic-language": "^2.0.0",
    "mobx": "^6.13.6",
    "mobx-react-lite": "^4.1.0",
    "react": "^19.0.0",
    "react-native": "^0.78.0",
    "react-native-safe-area-context": "^5.3.0",
    "reactigation": "^6.1.3",
    "responsive-react-native": "^1.0.7"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-test-renderer": "^19.0.0",
    "jest": "^29.7.0",
    "numic": "^5.3.1",
    "react-test-renderer": "^19.0.0",
    "typescript": "^5.8.2",
    "zero-configuration": "^0.18.1"
  },
  "trustedDependencies": [
    "numic",
    "zero-configuration"
  ],
  "type": "module",
  "prettier": "./node_modules/numic/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/numic/configuration/.eslintrc.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "react-dom": "react-native",
      "\\.(png|jpg|ico|jpeg|gif|svg|woff|woff2|mp4)$": "<rootDir>/test/helper/ImageMock.tsx"
    },
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "./test/helper/jest-setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|@react-native|responsive-react-native|reactigation|epic-language|logua)"
    ]
  }
}
